{
  "name": "@siteup/cli",
  "description": "siteup builds websites with html, md, css and js.",
  "version": "3.1.0",
  "type": "module",
  "exports": {
    "import": "./index.js"
  },
  "bin": {
    "siteup": "./bin.js"
  },
  "author": "Bret Comnes <bcomnes@gmail.com> (https://bret.io)",
  "bugs": {
    "url": "https://github.com/bcomnes/siteup-cli/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "aggregate-error-ponyfill": "^1.1.0",
    "async-folder-walker": "^2.1.1",
    "cheerio": "^1.0.0-rc.10",
    "chokidar": "^3.5.2",
    "clean-deep": "^3.4.0",
    "cliclopts": "^1.1.1",
    "cpx2": "^5.0.0",
    "desm": "^1.1.0",
    "esbuild": "^0.19.0",
    "ignore": "^5.1.8",
    "js-yaml": "^4.1.0",
    "lodash.keyby": "^4.6.0",
    "make-array": "^1.0.5",
    "markdown-it": "^13.0.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-highlightjs": "^4.0.1",
    "markdown-it-ins": "^3.0.1",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "mine.css": "^9.0.1",
    "minimist": "^1.2.5",
    "pretty": "^2.0.0",
    "pretty-tree": "^1.0.0",
    "uhtml-isomorphic": "^2.0.0",
    "webassert": "^3.0.2"
  },
  "devDependencies": {
    "auto-changelog": "^2.0.0",
    "dependency-cruiser": "^14.0.0",
    "gh-release": "^7.0.0",
    "npm-run-all2": "^6.0.0",
    "snazzy": "^9.0.0",
    "standard": "^17.0.0",
    "tap": "^18.4.0",
    "browser-sync": "^2.26.7",
    "typescript": "^5.1.6"
  },
  "homepage": "https://github.com/bcomnes/siteup-cli",
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcomnes/siteup-cli.git"
  },
  "scripts": {
    "prepublishOnly": "git push --follow-tags && gh-release -y",
    "test": "run-s test:*",
    "test:standard": "standard --verbose | snazzy",
    "test:tap": "tap",
    "test:deptree": "depcruise --validate .dependency-cruiser.json bin.js",
    "build-examples": "run-p example:*",
    "clean": "rm -rf public && mkdir -p public",
    "build": "npm run clean && run-p build:*",
    "build:siteup": "./bin.js --src . --ignore examples,test-cases,coverage",
    "watch": "npm run clean && run-p watch:*",
    "watch:serve": "browser-sync start --server 'public' --files 'public'",
    "watch:siteup": "npm run build:siteup -- --watch",
    "example:basic": "cd examples/basic && npm i && npm run build",
    "example:string-layouts": "cd examples/string-layouts && npm i --production && npm run build",
    "example:default-layout": "cd examples/default-layout && npm i --production && npm run build",
    "example:nested-dest": "cd examples/nested-dest && npm i --production && npm run build",
    "example:tonic-components-dest": "cd examples/tonic-components && npm i --production && npm run build",
    "example-skip:uhtml-isomorphic": "cd examples/nested-dest && npm i --production && npm run build",
    "version": "run-s version:*",
    "version:changelog": "auto-changelog -p --template keepachangelog auto-changelog --breaking-pattern 'BREAKING CHANGE:'",
    "version:git": "git add CHANGELOG.md",
    "deps": "depcruise --exclude '^node_modules|^[a-zA-Z0-9\\_]+$' --output-type dot . | dot -T svg > dependencygraph.svg",
    "deps3d": "depcruise --exclude '^node_modules|^[a-zA-Z0-9\\_]+$' --output-type plugin:dependency-cruiser/sample-3d-reporter-plugin --output-to 3d-dependency-graph.html .",
    "start": "npm run watch"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/bcomnes"
  },
  "standard": {
    "ignore": [
      "test-cases/build-errors/src/**/*.js",
      "test-cases/page-build-errors/src/**/*.js"
    ]
  },
  "files": [
    "bin.js",
    "lib/**",
    "index.js"
  ],
  "tap": {
    "typecheck": false,
    "allow-incomplete-coverage": true,
    "coverage-report": [
      "text",
      "lcovonly"
    ]
  }
}
