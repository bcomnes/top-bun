{
  "include": [
    "lib/**/**/**/*.js",
    "test-cases/**/**/**/*.js",
    "examples/**/**/**/*.js",
    "index.js",
    "bin.js"
  ],
  "exclude": [
    "node_modules",
    "types",
    "build"
  ],
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "target": "esnext",
    "module": "NodeNext",
    "lib": ["ESNext", "dom"],

    "removeComments": false,

    "checkJs": true,
    "allowJs": true,
    "noEmit": true,

    "alwaysStrict": true,
    "strictNullChecks": true,

    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "declarationMap": true,

    "baseUrl": "."
  }
}
